<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageMenuFragment">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="543dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="72dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/goto_myprofile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F3EAD0"
            android:text="마이페이지" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text=" 상품 목록 보기"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goto_total_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text=" - 전체 원단"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/goto_silk_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="ㆍ실크 원단"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/goto_cotton_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="130dp"
            android:layout_height="48sp"
            android:text="ㆍ면 원단"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/goto_leather_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="130dp"
            android:layout_height="48sp"
            android:text="ㆍ가죽 원단"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/goto_lace_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="130dp"
            android:layout_height="48sp"
            android:text="ㆍ레이스 원단"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구매 목록 보기"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/goto_purchaselist_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="48sp"
            android:text="ㆍ구매 목록"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>